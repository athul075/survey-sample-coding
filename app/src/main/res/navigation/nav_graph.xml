<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sample.surveycomponent.appstart.LoginFragment"
        android:label="LoginFragment"
        app:popUpToInclusive="true">
    <action
        android:id="@+id/action_loginFragment_to_survey_list"
        app:destination="@id/surveyFragment"
       />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.sample.surveycomponent.appstart.SplashFragment"
        android:label="fragment_splash"
        app:popUpToInclusive="true"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/surveyFragment"
        android:name="com.sample.surveycomponent.survey.suveylist.SurveyFragment"
        android:label="fragment_survey"
        app:popUpToInclusive="true"
        tools:layout="@layout/fragment_survey_list" />


</navigation>